#!/usr/bin/bash

./gradlew dist --no-daemon -q

if [[ $? -ne 0 ]]; then
    echo "Build Failed"
    exit 1
fi

[[ $# -ne 0 ]] && exit 0

scp ./build/libs/previewer.jar nydus:/tmp/map-previewer.jar
ssh nydus cp /tmp/map-previewer.jar /opt/botzilla/map-previewer.jar
ssh nydus rm /tmp/map-previewer.jar
